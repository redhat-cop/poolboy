---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: {{ poolboy_namespace }}:poolboy:anarchy
  namespace: {{ poolboy_test_babylon_anarchy_namespace }}
  annotations:
    description: >-
      This role is used to allow poolboy to manage anarchy resources.
rules:
- apiGroups:
  - {{ anarchy_domain }}
  resources:
  - anarchysubjects
  verbs:
  - create
  - delete
  - get
  - list
  - patch
  - watch
  - update
