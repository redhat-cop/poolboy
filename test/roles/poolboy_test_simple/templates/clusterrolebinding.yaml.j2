kind: ClusterRoleBinding
metadata:
  name: {{ (poolboy_namespace ~ '-test') | to_json }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ (poolboy_namespace ~ '-test') | to_json }}
subjects:
- kind: ServiceAccount
  name: poolboy
  namespace: {{ poolboy_namespace | to_json }}
